@model Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" />
    <h2>модель:@Model.name</h2>
    <p>@Model.shortDesc</p>
    <p>цена:@Model.price.ToString("c")</p>
    <p><a class="btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.id">Приобрести</a></p>
</div>